{
  "info": {
    "name": "Distributed Inventory \u2014 CQRS + Kafka",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "dfc3bfc2-803e-4a9c-b37a-10f09049ad3a"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Products Totals",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/v1/products/totals"
      }
    },
    {
      "name": "Purchase (no store)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{uuid}}"
          }
        ],
        "url": "{{baseUrl}}/v1/purchase",
        "body": {
          "mode": "raw",
          "raw": "{\"sku\": \"A1\", \"qty\": 1, \"policy\": \"highest-available\", \"customerId\": \"c1\"}"
        }
      }
    },
    {
      "name": "Create Product (lowest-stock store)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{uuid}}"
          }
        ],
        "url": "{{baseUrl}}/v1/products",
        "body": {
          "mode": "raw",
          "raw": "{\"sku\": \"A2\", \"name\": \"New Product\", \"initialOnHand\": 10}"
        }
      }
    },
    {
      "name": "Adjust - Sale -3",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{uuid}}"
          }
        ],
        "url": "{{baseUrl}}/v1/adjustments",
        "body": {
          "mode": "raw",
          "raw": "{\"storeId\": \"S1\", \"sku\": \"A1\", \"delta\": -3, \"reason\": \"sale\", \"traceId\": \"postman\"}"
        }
      }
    },
    {
      "name": "Availability sku=A1",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/v1/availability?sku=A1"
      }
    },
    {
      "name": "Create Reservation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{uuid}}"
          }
        ],
        "url": "{{baseUrl}}/v1/reservations",
        "body": {
          "mode": "raw",
          "raw": "{\"storeId\": \"S1\", \"lines\": [{\"sku\": \"A1\", \"qty\": 2}], \"ttlSeconds\": 900, \"customerId\": \"c1\"}"
        }
      }
    },
    {
      "name": "Confirm Reservation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{uuid}}"
          }
        ],
        "url": "{{baseUrl}}/v1/reservations/{{reservationId}}:confirm",
        "body": {
          "mode": "raw",
          "raw": "{\"paymentRef\": \"pay_postman\"}"
        }
      }
    },
    {
      "name": "Cancel Reservation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{uuid}}"
          }
        ],
        "url": "{{baseUrl}}/v1/reservations/{{reservationId}}:cancel",
        "body": {
          "mode": "raw",
          "raw": "{\"reason\": \"user_cancel\"}"
        }
      }
    },
    {
      "name": "Projection Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/v1/projections/status"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": "devtoken"
    },
    {
      "key": "uuid",
      "value": "07a8edf6-3637-4830-826f-163cf18529e1"
    },
    {
      "key": "reservationId",
      "value": "res_123"
    }
  ]
}